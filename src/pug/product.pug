                .swiper-slide.product-gallery__picture
                  img(src='img/productImage_1.png' srcset='img/productImage_1@2x.png 2x')
                  .product-gallery__tag
                    .tag.tag--sale
                      span 4
                            
        // right
        .product-scope__right
          .product-scope__category Напольные часы
          h1.h1-title.product-scope__name Часы Hermle 01210
          .product-scope__row
            .product-scope__article Арт: 5655351
            .product-scope__availability.is-available
