// FEATURED
.featured.featured--no-box
  .container
    .featured__box
      .featured__title.h2-title.tac Похожие модели
      
      .featured__slider.swiper-container.swiper-control-arrows(js-swiper-featured)
        .swiper-wrapper
          mixin featuredSlide_1
            .featured__slide.swiper-slide
              // prodcut card
              .product-card(js-link data-href="#")
                .product-card__image
                  img(src="img/featured_1.png" srcset="img/featured_1@2x.png 2x")
                .product-card__content
                  .product-card__name Напольные часы <br/>Hermle 22716
                  .product-card__actions
                    .product-card__price.price
                      .price__newprice 29 800 <span class="r-mark">₽</span>
                      .price__oldprice 48 000 ₽
                    .product-card__cta
                      a(href="#").btn.btn-compare
                        +svgMono("compare")
                      a(href="#").btn.btn-primary.btn--buy
                        .btn-cart-icon
                          +svgMono("cart")
                        span Купить
                  .product-card__chars.pc-chars
                    .product-card__subtitle Отличия модели
                    .pc-chars__row
                      span.pc-chars__label Цвет
                      span.pc-chars__content
                        .pc-chars__color
                          img(src='img/catalog-colors/color_4.png' srcset='img/catalog-colors/color_4@2x.png 2x')
                          span Красное дерево
                    .pc-chars__row
                      span.pc-chars__label Механизм
