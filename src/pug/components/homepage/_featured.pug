// FEATURED
.featured(data-aos="fade")
  .container
    .featured__box
      .featured__title.h2-title.tac Популярные модели
      
      .featured__slider.swiper-container.swiper-control-arrows(js-swiper-featured)
        .swiper-wrapper
          mixin featuredSlide_1
            .featured__slide.swiper-slide
              // prodcut card
              .product-card(js-link data-href="product.html")
                .product-card__image
                  img(src="img/featured_1.png" srcset="img/featured_1@2x.png 2x")
                .product-card__content
                  .product-card__name Напольные часы <br/>Hermle 22716
                  .product-card__actions
                    .product-card__price.price
                      .price__newprice 29 800 <span class="r-mark">₽</span>
                      .price__oldprice 48 000 ₽
                    .product-card__cta
                      a(href="#").btn.btn-compare
                        +svgMono("compare")
                      a(href="#").btn.btn-primary.btn--buy
                        .btn-cart-icon
                          +svgMono("cart")
                        span Купить
