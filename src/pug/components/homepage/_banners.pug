//BANNERS
.h-banners(data-aos="fade")
  .container
    .h-banners__wrapper
      .h-banners__col
        // banner
        .banner.banner--bg-cover
          .banner__content
            .h2-title Путешествие на фабрику
            .banner__cta
              a(href="#").btn.btn-outline.btn-outline--small
                span Смотреть
          .banner__image.scaler(style="padding-bottom: "+(240/400)*100 +"%")
            img(js-lazy data-src="img/banner_1.png" data-srcset="img/banner_1@2x.png 2x")
              
      .h-banners__col
        // banner
        .banner(style="background-color: #FFFDFA")
          .banner__content
            .banner__title Наша компания&nbsp;&mdash; официальный партнёр фабрики в&nbsp;России
            .banner__cta
              a(href="#").btn.btn-outline.btn-outline--small
                span Подробнее
          .banner__image
            img(src="img/certificate.jpg" srcset="img/certificate@2x.jpg 2x")
      
      .h-banners__col
        // banner
        .banner.banner--bg-cover
          .banner__content
            .h2-title Посетите <br/>наш шоурум<br/> в Москве
            .banner__cta
              a(href="#").btn.btn-outline.btn-outline--small
                span На карте
          .banner__image.scaler(style="padding-bottom: "+(240/400)*100 +"%")
            img(js-lazy data-src="img/banner_3.png" data-srcset="img/banner_3@2x.png 2x")
