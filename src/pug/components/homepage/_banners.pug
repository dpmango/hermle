//BANNERS
.h-banners(data-aos="fade")
  .container
    .h-banners__wrapper(js-align-banner-buttons)
      .h-banners__col(data-banner-type="cover")
        // banner
        .banner.banner--bg-cover
          .banner__content
            .h3-title.banner__title-limit Путешествие на фабрику
            .banner__cta
              a(href="#").btn.btn-outline.btn-outline--small
                span Смотреть
          .banner__image
            img(js-lazy data-src="img/banner_1.png" data-srcset="img/banner_1@2x.png 2x")
              
      .h-banners__col(data-banner-type="regular")
        // banner
        .banner(style="background-color: #FFFDFA")
          .banner__content
            .banner__title Наша компания&nbsp;&mdash; официальный партнёр фабрики в&nbsp;России
            .banner__cta
              a(href="#").btn.btn-outline.btn-outline--small
                span Подробнее
          .banner__image
            img(src="img/certificate.jpg" srcset="img/certificate@2x.jpg 2x")
      
      .h-banners__col(data-banner-type="cover")
        // banner
        .banner.banner--bg-cover.banner--line-lg
          .banner__content
            .h3-title Посетите <br/>наш шоурум<br/> в Москве
            .banner__cta
              a(href="#").btn.btn-outline.btn-outline--small
                span На карте
          .banner__image
            picture(js-lazy data-src="img/banner_3.png")
              // 768 and above
              data-src(
              media="(min-width: 992px)" 
              srcset="img/banner_3.png 1x, img/banner_3@2x.png 2x")
              // less 768px
              data-src(
              media="(min-width: 0px)" 
              srcset="img/banner_3_lg.png 1x, img/banner_3_lg@2x.png 2x")
              // fallback
              //- img(src='img/banner_3.png')
