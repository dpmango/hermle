// HEADER :: START
header.header
  .container
    // top
    .header__top
      ul.header__top-menu(js-menu-hider)
        li
          a(href="#") Доставка
        li
          a(href="#") Оплата
        li
          a(href="#") Сервис
        li
          a(href="#") Гарантии
        li(data-hide-on="670")
          a(href="#") Новости
        li(data-hide-on="767")
          a(href="#") Контакты
        li(data-hide-on="992")
          a(href="#") Отслеживание заказа
        li(data-hide-on="1200")
          a(href="#") Документы
        .header-more
          .header-more__toggler
            span Еще
            +svgMono("arrow-down")
          ul.header-more__hidden(js-menu-hider-target)
            
      .header__socials.social-media
        a(href="#").social-media__instagram
          +svgMono("social-instagram")
        a(href="#").social-media__facebook
          +svgMono("social-facebook")
        a(href="#").social-media__youtube
          +svgMono("social-youtube")
    
    // center
    .header__center
      .header__hamburger
        .hamburger.hamburger--squeeze(href="#mobile-navi" js-popup)
          .hamburger-box
            .hamburger-inner
            
      a(href="homepage.html").header__logo
        img(src="img/template/logo.png" srcset="img/template/logo@2x.png 2x")
      
      .header__showroom
        .showroom-header
          .showroom-header__name Шоурум <br/> в Москве
          .showroom-header__icon
            +svgColor("clock")
          .showroom-header__content
            .showroom-header__address <span class="sm-only">Москва, <br/></span>ул. Шаболовка д.23 к.5
            .showroom-header__directions 1-й этаж красная вывеска <br/> "Hermle Часы из Германии"
      
      .header__cta
        a(href="#callback" js-popup).btn.btn-primary.btn-primary--small
          span Перезвоните
      
      .header__contacts.contacts-header
        .contacts-header__messengers
          .contacts-header__whatsapp
            a(href="#" target="_blank") whatsapp
          .contacts-header__viber
            a(href="#" target="_blank") viber
          .contacts-header__telegram
            a(href="#" target="_blank") telegram
        .contacts-header__phones
          a(href="tel:88003020958").header-phone
            .header-phone__icon
              +svgMono('phone')
            .header-phone__content
              .header-phone__tel 8 800 302-09-58
              .header-phone__description Бесплатно по РФ
          a(href="tel:+74954091058").header-phone
            .header-phone__icon
              +svgMono('phone')
            .header-phone__content
              .header-phone__tel +7 495 409-10-58
              .header-phone__description Телефон в Москве
        
      a(href="cart.html").header__cart
        .header__cart-counter
          span 2
        +svgMono('cart')

    // bottom
    .header__bottom
      form(action="#" method="POST").header__search.header-search(js-header-search)
        .header-search__icon(js-header-search-toggle)
          +svgMono("search")
        .header-search__input
          input(type="text" placeholder="Что будем искать?")
        .header-search__cta
          button(type="submit").btn.btn-primary.btn-primary--small
            span Найти
      .header__menu
        .header-menu.header-menu--mobile
          .header-menu__name Каталог
        // menu group
        .header-menu
          .header-menu__name(js-clear-last-sybmol data-on="1280" data-symbol=":") Часы <br/> по форме:
          ul.header-menu__list
            li
              a(href="#") Напольные
              ul
                li
                  a(href="#") Напольные с боем
                li
                  a(href="#") Напольные с боем и мелодией
                li
                  a(href="#") Напольные с инкрустацией
                li
                  a(href="#") Напольные с маятником
            li
              a(href="#") Настенные
              ul
                li
                  a(href="#") Настенные с боем
                li
                  a(href="#") Настенные с боем и мелодией
                li
                  a(href="#") Настенные с маятником
            li
              a(href="#") Настольные
              ul
                li
                  a(href="#") Настольные с боем и мелодией
                li
                  a(href="#") Настольные с инкрустацией
                li
                  a(href="#") Настольные с маятником
        // menu group
        .header-menu
          .header-menu__name(js-clear-last-sybmol data-on="1280" data-symbol=":") Часы <br/> по стилю:
